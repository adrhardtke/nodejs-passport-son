extends ./../layout/main

block content
    table()
        thead
            tr
                th Name 
                th Username
                th Email
                th Actions
        tbody
            each user in users
                tr
                    td=user.name
                    td=user.username
                    td=user.email
                    td
                        form(action="/users/" + user._id + "/?_method=DELETE", method="POST")
                            button(type="submit") Deletar